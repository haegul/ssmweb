<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Index page</title>

    <!-- jquery -->
    <script type="text/javascript" src="/static/js/jquery.js"></script>
    <script type="text/javascript" src="/static/js/jquery-ui.min.js"></script>

    <!-- bootstrap -->
    <link rel="stylesheet" href="/static/css/bootstrap.min.css" />
    <script type="text/javascript" src="/static/js/bootstrap.js"></script>

    <!-- angular js -->
    <script type="text/javascript" src="/static/js/angular.js"></script>

    <!-- common js -->
    <script type="text/javascript" src="/static/js/common.js"></script>

    <!-- custom style -->
    <style type="text/css">

        @import url(http://fonts.googleapis.com/earlyaccess/nanumgothic.css);
        /* FONT OVERRIDE */
        h1,h2,h3,h4,h5,h6 {
            font-family: 'Nanum Gothic';
        }

        html,body {
            height: 100%;
        }

        #loading {
            display:    none;
            position:   fixed;
            z-index:    1000;
            top:        0;
            left:       0;
            height:     100%;
            width:      100%;
            background: rgba( 255, 255, 255, .8 )
            url('http://i.stack.imgur.com/FhHRx.gif')
            50% 50%
            no-repeat;
        }
    </style>


    <% if( typeof(extraCSS) != 'undefined' ) { %>
        <% extraCSS.forEach( function(css) { %>
            <link rel="stylesheet" href="/static/css/<%= css%>" />
        <% }) %>
    <% } %>

    <!-- Additional Scripts -->

    <% if ( typeof(extraJS) != 'undefined' ) { %>
        <% extraJS.forEach( function(js) { %>
            <script type="text/javascript" src="/static/js/<%= js %>"></script>
        <% }) %>
    <% } %>

</head>
<body>

<!-- loading image -->
<div id="loading" style="display: none;"></div>

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">GLove</a>
        </div>
        <div class="navbar-collapse collapse">
            <!-- 상단 네비게이션 바 -->
            <ul class="nav navbar-nav">
                <li class="active"><a href="#">Home</a></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Tutorial<b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="#">Action</a></li>
                        <li><a href="#">Another action</a></li>
                        <li><a href="#">Something else here</a></li>
                        <li class="divider"></li>
                        <li class="dropdown-header">Nav header</li>
                        <li><a href="#">Separated link</a></li>
                        <li><a href="#">One more separated link</a></li>
                    </ul>
                </li>
                <li><a href="#about">FreeDraw</a></li>
                <li><a href="#contact">Gallery</a></li>

            </ul>
            <div class="navbar-form navbar-right">
                <% if( member ) { %>
                <span style="color: #cccccc;"><strong><%=member.userid%></strong> 님 반갑습니다. &nbsp;</span>
                <button type="submit" class="btn btn-success"  onclick="void(procMemberLogout())">
                    <span class="glyphicon glyphicon-off"></span> Sign out
                </button>
                <% } else { %>
                <button type="submit" class="btn btn-success"  data-toggle="modal" data-target="#loginModal">
                    <span class="glyphicon glyphicon-user"></span>  Sign in
                </button>
                <% } %>
            </div>
        </div><!--/.navbar-collapse -->
    </div>
</div>